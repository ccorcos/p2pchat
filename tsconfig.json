{
	"compilerOptions": {
		"allowSyntheticDefaultImports": false,
		"target": "ES2018",
		"module": "commonjs",
		"jsx": "react",
		"moduleResolution": "node",
		"noImplicitAny": false,
		"noUnusedLocals": false,
		"noUnusedParameters": false,
		"removeComments": true,
		"strictNullChecks": true,
		"preserveConstEnums": true,
		"noImplicitThis": true,
		"sourceMap": true,
		"allowJs": true,
		"lib": ["es2018", "esnext.asynciterable", "dom"],
		"outDir": "dist"
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules"]
}
